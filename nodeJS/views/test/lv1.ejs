  <link href="stylesheets/test/Quiz_LV1-2/style.css" rel="stylesheet" type="text/css">

</head>
<body>
  <%- include ../layer/header %>
  <br></br>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="box">
          <div class="main"><center><h1>โจทย์</h1></center>
          <img src="<%= pic %>"class="img2">
        </div>
      </div>
      </div>
      <div class="col-xs-12 col-sm-8">
